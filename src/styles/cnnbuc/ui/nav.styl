$nav-height = 44px;

#nv {
  overflow: hidden;
  height: $nav-height;
  background: $color-primary;

  li {
    float: left;
    font-weight: 500;
    transition: 0.15s;
    height: $nav-height;
    line-height: $nav-height;

    a {
      font-size: 15px;
      float: left;
      height: $nav-height;
      line-height: $nav-height;
      padding: 0 32px;
      color: #fff;
      text-decoration: none;
    }

    &:hover {
      background: rgba($color-grey, 0.4);
    }

    &.a {
      background: $color-grey;
    }
  }
}

#nv li span {
  display: none;
}

#nv li.a a {
  color: #fff;
}

#qmenu {
  float: right;
  display: inline;
  margin-top: 8px;
  width: 103px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  color: #333;
  font-weight: 700;
  background: #FFF
  overflow: hidden;
  font-size: 13px;
}

#qmenu:hover {
  text-decoration: none;
}
